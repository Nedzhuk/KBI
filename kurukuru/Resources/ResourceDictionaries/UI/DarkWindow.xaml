<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Window.ButtonSurface" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Dark.Background.FillColor.MicaBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Dark.StrokeColor.SurfaceStroke}"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderThickness" Value="1,0,1,1"/>
    </Style>
    <Style x:Key="Window.TitleSurface" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Dark.Background.FillColor.MicaBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Dark.StrokeColor.SurfaceStroke}"/>
        <Setter Property="Margin" Value="-1,-1,-1,0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="CornerRadius" Value="7,7,0,0"/>
    </Style>
    <Style x:Key="Window.Surface" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Dark.Background.FillColor.Default}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Dark.StrokeColor.SurfaceStroke}"/>
        <Setter Property="Margin" Value="7"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="7"/>
    </Style>
</ResourceDictionary>